<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/santicell"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="SANTICELL"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/snekk"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="Snekk"
        android:textIsSelectable="false"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/santicell"
        app:layout_constraintVertical_bias="0.184" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="186dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/snekk"
        app:srcCompat="@drawable/king-cobra-pixel-art-pixel-art-snake-cobra-animal-reptile-8bit"
        tools:layout_editor_absoluteX="130dp" />

</androidx.constraintlayout.widget.ConstraintLayout>