<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/currentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:text="Score:"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="420dp" />

    <TextView
        android:id="@+id/currentHighscore"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:text="Highscore:"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="420dp" />

    <Button
        android:id="@+id/arrowLeft"
        android:layout_width="59dp"
        android:layout_height="37dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="lt"
        app:layout_constraintEnd_toStartOf="@+id/arrowUp"
        tools:layout_editor_absoluteY="484dp" />

    <Button
        android:id="@+id/arrowRight"
        android:layout_width="59dp"
        android:layout_height="40dp"
        android:text="rt"
        app:layout_constraintStart_toEndOf="@+id/arrowUp"
        tools:layout_editor_absoluteY="480dp" />

    <Button
        android:id="@+id/arrowUp"
        android:layout_width="46dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="^      |"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="420dp" />

    <Button
        android:id="@+id/arrowDown"
        android:layout_width="42dp"
        android:layout_height="69dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="|    v"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrowUp" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="37dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="76dp"
        android:text="x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_marginTop="76dp"
        android:text="âš™"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/creditsButton"
        android:layout_width="108dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="credits"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/snakeIgnore"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginTop="104dp"
        android:text="-----------------------------"
        app:layout_constraintTop_toBottomOf="@+id/creditsButton"
        tools:layout_editor_absoluteX="101dp" />

    <RadioButton
        android:id="@+id/dotIgnore"
        android:layout_width="62dp"
        android:layout_height="25dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        app:layout_constraintStart_toEndOf="@+id/snakeIgnore"
        app:layout_constraintTop_toTopOf="@+id/snakeIgnore" />

    <View
        android:id="@+id/gameview"
        android:layout_width="315dp"
        android:layout_height="337dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="61dp" />

</androidx.constraintlayout.widget.ConstraintLayout>