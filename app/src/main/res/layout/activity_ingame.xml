<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="315dp"
        android:layout_height="335dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        app:layout_constraintEnd_toStartOf="@+id/currentHighscore"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/currentHighscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highscore:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/currentScore"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/credits"
        android:layout_width="92dp"
        android:layout_height="36dp"
        android:text="credits"
        app:layout_constraintEnd_toStartOf="@+id/scam"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="668dp" />

    <Button
        android:id="@+id/scam"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/credits"
        tools:layout_editor_absoluteY="668dp" />

    <Button
        android:id="@+id/taptoplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="Tap to play"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:layout_editor_absoluteX="150dp" />

    <Button
        android:id="@+id/arrowLeft"
        android:layout_width="59dp"
        android:layout_height="37dp"
        android:text="<-"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="472dp" />

    <Button
        android:id="@+id/arrowRight"
        android:layout_width="59dp"
        android:layout_height="40dp"
        android:text="->"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="469dp" />

    <Button
        android:id="@+id/arrowUp"
        android:layout_width="46dp"
        android:layout_height="58dp"
        android:text="^      |"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="414dp" />

    <Button
        android:id="@+id/arrowDown"
        android:layout_width="42dp"
        android:layout_height="69dp"
        android:text="|    v"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="37dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="?"
        app:layout_constraintEnd_toStartOf="@+id/view"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_marginBottom="304dp"
        android:text="âš™"
        app:layout_constraintBottom_toTopOf="@+id/currentHighscore"
        tools:layout_editor_absoluteX="374dp" />

    <Button
        android:id="@+id/creditsButton"
        android:layout_width="108dp"
        android:layout_height="37dp"
        android:text="credits"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="11dp" />

</androidx.constraintlayout.widget.ConstraintLayout>